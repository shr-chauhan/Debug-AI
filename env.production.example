# Production Environment Variables
# Copy this to .env and fill in your values

# Database
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_PORT=5432
POSTGRES_HOST=postgres  # For distributed: use external IP/hostname

# Redis
REDIS_PORT=6379
REDIS_HOST=redis  # For distributed: use external IP/hostname

# Backend
BACKEND_PORT=8000
BACKEND_HOST=backend  # For distributed: use external IP/hostname
ENV=production
JWT_SECRET=generate_with_python_c_import_secrets_print_secrets_token_urlsafe_32
JWT_EXPIRATION_DAYS=30

# OpenAI
OPENAI_API_KEY=your_openai_api_key
OPENAI_MODEL=gpt-4o-mini

# GitHub (optional)
GITHUB_TOKEN=your_github_token_if_needed

# Frontend
FRONTEND_PORT=3000
NEXT_PUBLIC_API_BASE_URL=http://localhost:8000  # For distributed: use backend public URL
AUTH_SECRET=generate_with_openssl_rand_base64_32
AUTH_URL=http://localhost:3000  # For distributed: use frontend public URL
GITHUB_CLIENT_ID=your_github_oauth_client_id
GITHUB_CLIENT_SECRET=your_github_oauth_client_secret
